{% extends 'base.html.twig' %}

{% block title %}All offers{% endblock %}

{% block body %}
{{ form_start(form) }}
{{ form_row(form.searchTitle) }}
{{ form_row(form.contract) }}
{{ form_row(form.searchLocation) }}
<button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#filterModal">+ Filters</button>

<!-- Modal -->
<div id="filterModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Filters</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{ form_row(form.salary) }}
        {{ form_row(form.companySector) }}
        {{ form_row(form.experience) }}
        {{ form_row(form.workFromHome) }}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Filter</button>
      </div>
    </div>
  </div>
</div>
{{ form_end(form) }}
{% for offer in offers %}
  <div class="row">
    <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{ offer.title }}</h5>
        <p class="card-text">{{ offer.description }}</p>
        <p class="card-text">{{ offer.location }}</p>
        <p class="card-text">{{ offer.contract }}</p>
        <p class="card-text">{{ offer.workFromHome }}</p>
        <p class="card-text">{{ offer.company.name }}</p>
      </div>
    </div>
  </div>
  <div>
{% endfor %}
{% endblock %}
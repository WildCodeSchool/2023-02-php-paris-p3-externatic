{% extends "base.html.twig" %}

{% block title %}Fiche d'une annonce -
	{{ offer.title }}
{% endblock %}

{% block body %}
	<section class="OfferShowHeaderSection pt-4 pb-4" style="background-image: url(../../{{ offer.picture }})">
		<img class="indexCompanyLogo" src="../../{{ offer.company.logo }}">
		<p>{{ offer.company.name }}</p>
		<h3 class="mb-4 mt-4">
			<strong>{{ offer.title }}</strong>
		</h3>
		<section class="otherInfo">
			<div class="greyAreaInOfferShow">
				<img src="{{ asset('build/images/picto/location1.c5d41a07.svg') }}" alt="pictoLocation">
				{{ offer.location }}
			</div>
			<div class="greyAreaInOfferShow">
				<img src="{{ asset('build/images/picto/job 3.2f5799e1.svg') }}" alt="pictoCartable">
				{{ offer.contract }}
			</div>
			<div class="greyAreaInOfferShow">
				<img src="{{ asset('build/images/picto/piggy-bank 1.00856096.svg') }}" alt="pictoCochon">
				{{ offer.minSalary // 1000 }}K																																							-
				{{ offer.maxSalary // 1000 }}K
			</section>
			<p>offer posted
				{{ dateInterval }}
				ago</p>
			<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
				Apply
			</button>
		</div>
	</section>
	<h2 class="mt-4">
		<img src="{{ asset('build/images/picto/immeuble-de-bureaux 2.02421ea4.svg') }}" alt="pictoImmeuble">
		Company</h2><hr>
	{{ offer.company.presentation }}
	<h2 class="mt-4">
		<img src="{{ asset('build/images/picto/job 3.2f5799e1.svg') }}" alt="pictoCartable">
		Job Description</h2><hr>
	<p>{{ offer.description }}</p>
	<h2 class="mt-4">
		<img src="{{ asset('build/images/picto/description-de-lemploi.224a23d1.svg') }}" alt="pictoPanneau">
		Candidate Profil</h2><hr>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">Soft</th>
				<th scope="col">Hard</th>
			</tr>
		</thead>
		<tbody>
			{% for skill in offer.skills %}
				{% if skill.type == 'hard' %}
					<tr>
						<th scope="row">{{ skill.name }}</th>
					{% endif %}
					{% if skill.type == 'soft' %}
						<th scope="row">{{ skill.name }}</th>
					</tr>
				{% endif %}
			{% endfor %}
		</tbody>
	</table>
	<h2 class="mt-4">
		<img src="{{ asset('build/images/picto/interview 2.a6d981fe.svg') }}" alt="pictoItvProcess">
		Interview Process</h2><hr><ol>
		<li>
			{{ offer.interviewProcess }}
		</li>
	</ol>
	<section class="beforeFooterBtn">
		<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
			Apply
		</button>
	</section>
	{% include "offer/_modalApply.html.twig" %}
{% endblock %}

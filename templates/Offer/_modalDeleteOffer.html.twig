<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Delete {{ offer.title }} ?</h5>
				<button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				You're about to permanently delete this offer.<br><strong>Are you sure ?</strong>
			</div>
			<div class="col text-center mt-4 modal-footer">
				{% include "offer/_delete_form.html.twig" %}
			</div>
		</div>
	</div>
</div>

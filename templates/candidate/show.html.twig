	{% if candidate.visible %}
		<div class="form-check form-switch">
			<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
			<label class="form-check-label" for="flexSwitchCheckChecked">Visible</label>
		</div>
	{% else %}
		<div class="form-check form-switch">
			<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
			<label class="form-check-label" for="flexSwitchCheckDefault">Non visible</label>
		</div>
	{% endif %}

	{# FAIRE RECUP VIEWS #}
	<p>Viewed by people</p>
	<img
	class="img_icon fa-border" src="{{ asset('build/images/profil_views.png') }}" alt="profil_views"/>

	{# RECUP COMBIEN PROFIL REMPLI #}
	<p>Profil completion</p>

	<h1>YOUR PROFILE</h1>
	<img src="/uploads/{{ candidate.picture }}" alt="picture_profil"/>
	<p>{{ candidate.firstname }}
		{{ candidate.lastname }}</p>

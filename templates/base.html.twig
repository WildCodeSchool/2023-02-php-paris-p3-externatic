<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}"/>
		<title>
			{% block title %}Externatic{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>

    {# lien vers la page login - affiche l'image de l'user quand il est connecté => à mettre dans la navebar #}
    {% if app.user %}
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                {# <img src="{{ asset(app.user.candidate.picture) }}" id="profile-picture-navbar" alt="profile-picture"> #}
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="{{ path('logout') }}">Logout</a></li>
            </ul>
    {% else %}
        <a href="{{ path('login') }}">LOGIN</a>
    {% endif %}

    <body>
		{% for category, messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-{{ category }}">
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}

        {% block body %}{% endblock %}
    </body>
</html>

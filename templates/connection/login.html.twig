{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<section class="margin">
    <div class="container text-center">
        <h1> WELCOME !</h1>
        <div class="row justify-content-center mt-4">
            <div class="col col-sm-12 col-md-8 col-lg-6 col-xl-5 col-xxl-5">
                <div id ="connection-header">
                    <ul class="nav nav-underline justify-content-around" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button" role="tab" aria-controls="login" aria-selected="true">Login</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="account-tab" data-bs-toggle="tab" data-bs-target="#create-account" type="button" role="tab" aria-controls="create-account" aria-selected="false">Create an account</button>
                        </li>
                    </ul>
                </div>
                <div id="connection-form">
                    <div class="tab-content">
                        <div class="tab-pane active" id="login" role="tabpanel" aria-labelledby="login-tab" tabindex="0"></div>
                            <div class="tab-pane" id="create-account" role="tabpanel" aria-labelledby="account-tab" tabindex="0">
                                <div class="d-flex flex-row justify-content-evenly mb-2">
                                    <div class="p-2">
                                        <h5>Candidate</h5>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <i class="bi-toggle-on"></i>
                                    </div>
                                    <div class="p-2">
                                        <h5>Company</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <button type="button" class="btn btn-primary btn-lg mt-2">connect with Linkedin</button>
                    <button type="button" class="btn btn-secondary btn-lg mt-2">connect with Google</button>
                    <form action="{{ path('login') }}" method="post">
                        <div class="col mt-4">
                            <input type="text" id="username" class="form-control" name="_username" placeholder="Email" value="{{ last_username }}">
                        </div>
                        <div class="col mt-4">
                            <input type="password" id="password" class="form-control" name="_password" placeholder="Password">
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button type="submit" class="btn btn-secondary mt-4">Login</button>
                    </form>
                </div>
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            </div>
        </div>
    </div>
</section>
{% endblock %}
